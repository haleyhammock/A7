<html>
<head>
	<title>Wellness Forum</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<script type="text/javascript" src="https://code.jquery.com/jquery-1.7.1.min.js"></script>
	<script src="/js/bar.js"></script>
	<script src="js/bootstrap.js"></script>

	<link href="/css/bootstrap-4.6.css" rel="stylesheet">
	<link href="/css/bootstrap.min-4.6.css" rel="stylesheet">
</head>

<body>
	<nav class="navbar navbar-expand-md bg-dark navbar-dark">
		<a class="navbar-brand" href="home"> Wellness Forum</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar">
    		<span class="navbar-toggler-icon"></span>
  		</button>
		<div id="navbar" class="collapse navbar-collapse">
			<ul class="nav navbar-nav">
				<li class="nav-item active">
					<a class="nav-link" href="home">Home</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="record">Record</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="forum">Forum</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="profile">Profile</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="help">Help</a>
				</li>
				<li>
					<button type="button" id="logout" class="btn btn-danger">Log Out</button>
				</li>
			</ul>
		</div>
	</nav>

	<div id="main" class="jumbotron">
		{{#each data}}
			<h3 class="welcome"id='welcome'> Welcome, {{name}}</h3>
			<p>Check out your stats for the day!:</p>
		{{/each}}
	</div>

	<!-- PLEASE FIX ME !!!!-->
		<div class="data">
			<button type="button" onClick="graph()" class="btncircle">i</button>

			<div id="options" class="graph-content">
				<p class="infos">Select an interval to see your recent, all time, or today's stats</p>
			</div>

	  </div>
		<label class="grphxlabel" for="graph" style="margin-left: 25px;">Interval</label>
		<select name="X-axis" class="x-axis" id="intervals"name='timess'>
		<option value="day">Recent</option>
		<option value="week">Last Week</option>
		<option value="month">All Time</option>
	</select>
<!--
*** cant use an each block here since each bar needs to update individually ***
-->
{{#each recordtypes}}
		<div class="graph">
			<p style="margin-left: 25px; margin-bottom: -20px; font-size: 15px;" !important>{{subject}}</p>
			<p id="msg" style='font-size: 12; margin-right: 55px;float: right;'>Record some data!!!<p>
			<div class="progress" style="width: 80%; margin-left: 25px;">
  		<div class="progress-bar " role="progressbar" aria-valuenow='60' aria-valuemin="0" aria-valuemax="70" style="width: 0%;" id='prog'>
    <span class="sr-only">60% Complete</span>
  </div>
</div>
</div>
{{/each}}
	</div>
</body>
</html>
